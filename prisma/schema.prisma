// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  FREIGHTER
  CARRIER
  WAREHOUSE
  STORE
  ADMIN
}

enum LocationType {
  SUPPLIER
  HUB
  STORE
}

enum PlanStatus {
  DRAFT
  PROPOSED
  ACCEPTED
  IN_TRANSIT
  DELIVERED
  CANCELLED
}

enum TripStatus {
  PROPOSED
  ACCEPTED
  IN_TRANSIT
  DELIVERED
  CANCELLED
}

enum IncidentType {
  REFUSAL
  DELAY
  IMBALANCE
}

enum IncidentStatus {
  OPEN
  RESOLVED
  ESCALATED
}

enum OrderStatus {
  DRAFT
  GROUPED
  ASSIGNED
  IN_TRANSIT
  DELIVERED
  CANCELLED
}

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  password_hash    String
  firstName        String
  lastName         String
  assignedTrips    Trip[]         @relation("carrier")
  role             Role      @default(FREIGHTER)
  isEmailVerified  Boolean   @default(false)
  storeLocationId  String?        // For STORE role - which location they manage
  storeLocation    Location? @relation("storeManagers", fields: [storeLocationId], references: [id])
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  is_deleted       Boolean   @default(false)

  // Relations
  createdPlans     TransportPlan[]
  notifications    Notification[]
  cmrs             CMR[]     @relation("warehouse_cmr")
  createdOrders    Order[]   @relation("order_creator")

  @@index([email])
  @@index([is_deleted])
  @@index([storeLocationId])
  @@map("users")
}

model Location {
  id               String       @id @default(cuid())
  name             String
  type             LocationType
  address          String?
  latitude         Float?
  longitude        Float?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  is_deleted       Boolean      @default(false)

  // Relations
  storeManagers    User[]       @relation("storeManagers")
  orders_departure Order[]      @relation("order_departure")
  orders_arrival   Order[]      @relation("order_arrival")
  trips_departure  Trip[]       @relation("trip_departure")
  trips_arrival    Trip[]       @relation("trip_arrival")

  @@index([type])
  @@index([is_deleted])
  @@map("locations")
}

model TransportPlan {
  id                    String      @id @default(cuid())
  warehouse_id          String?     // Entrepôt qui crée ce plan
  plan_date             DateTime?   // Date du plan transport
  status                PlanStatus  @default(DRAFT)
  total_trips           Int         @default(0)
  total_units           Int         @default(0)
  notes                 String?
  version               Int         @default(1)
  createdBy             String
  createdAt             DateTime    @default(now())
  preArrivalNotified    Boolean     @default(false)
  trips                 Trip[]
  updatedAt             DateTime    @updatedAt
  is_deleted            Boolean     @default(false)

  // Relations
  createdByUser         User        @relation(fields: [createdBy], references: [id])
  incidents             Incident[]
  notifications         Notification[]

  @@index([warehouse_id])
  @@index([plan_date])
  @@index([status])
  @@index([createdBy])
  @@index([is_deleted])
  @@map("transport_plans")
}

model Order {
  id                   String      @id @default(cuid())
  departure_location_id String
  arrival_location_id  String
  loading_date         DateTime
  unit_count           Int
  status               OrderStatus @default(DRAFT)
  trip_id              String?
  created_by           String
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
  is_deleted           Boolean     @default(false)

  // Relations
  departure_location   Location    @relation("order_departure", fields: [departure_location_id], references: [id])
  arrival_location     Location    @relation("order_arrival", fields: [arrival_location_id], references: [id])
  trip                 Trip?       @relation(fields: [trip_id], references: [id])
  created_by_user      User        @relation("order_creator", fields: [created_by], references: [id])

  @@index([status])
  @@index([departure_location_id, arrival_location_id])
  @@index([trip_id])
  @@index([created_by])
  @@index([is_deleted])
  @@map("orders")
}

model Incident {
  id               String          @id @default(cuid())
  type             IncidentType
  status           IncidentStatus  @default(OPEN)
  planId           String
  carrierId        String?
  warehouseId      String?
  description      String
  createdAt        DateTime        @default(now())
  resolvedAt       DateTime?
  is_deleted       Boolean         @default(false)

  // Relations
  plan             TransportPlan   @relation(fields: [planId], references: [id])

  @@index([planId])
  @@index([type])
  @@index([status])
  @@index([is_deleted])
  @@map("incidents")
}

model Trip {
  id               String      @id @default(cuid())
  planId           String
  carrierId        String
  status           TripStatus  @default(PROPOSED)
  departure_location_id String?
  arrival_location_id String?
  loading_time     DateTime?
  departure_time   DateTime?
  arrival_time     DateTime?
  acceptedAt       DateTime?
  refusedAt        DateTime?
  refusalReason    String?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  is_deleted       Boolean     @default(false)

  // Relations
  plan             TransportPlan @relation(fields: [planId], references: [id])
  carrier          User          @relation("carrier", fields: [carrierId], references: [id])
  departure_location Location?  @relation("trip_departure", fields: [departure_location_id], references: [id])
  arrival_location Location?    @relation("trip_arrival", fields: [arrival_location_id], references: [id])
  orders           Order[]       // One-to-many: each trip can have multiple orders
  cmr              CMR?         // One-to-one: each trip can have one CMR

  @@index([carrierId])
  @@index([planId])
  @@index([status])
  @@index([departure_location_id, arrival_location_id])
  @@index([is_deleted])
  @@map("trips")
}

model Notification {
  id               String   @id @default(cuid())
  userId           String   // Store user or freighter to notify
  type             String   // 'DELAY', 'INCIDENT', 'PRE_ARRIVAL', etc.
  planId           String
  message          String
  acknowledged     Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  is_deleted       Boolean  @default(false)

  // Relations
  user             User     @relation(fields: [userId], references: [id])
  plan             TransportPlan @relation(fields: [planId], references: [id])

  @@index([userId, acknowledged, createdAt])
  @@index([planId])
  @@index([is_deleted])
  @@map("notifications")
}

model CMR {
  id               String   @id @default(cuid())
  tripId           String   @unique
  warehouseId      String
  receivedCount    Int?
  damageDeclared   Boolean  @default(false)
  damageNotes      String?
  inspectorName    String?
  status           String   @default("DRAFT")
  version          Int      @default(1)
  submittedAt      DateTime?

    lastUpdatedBy    String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  is_deleted       Boolean  @default(false)

  // Relations
  trip             Trip     @relation(fields: [tripId], references: [id])
  warehouse        User     @relation("warehouse_cmr", fields: [warehouseId], references: [id])

  @@index([tripId])
  @@index([warehouseId])
  @@index([status])
  @@index([is_deleted])
  @@map("cmrs")
}
model TransportPlanArchive {
  id                    String      @id @default(cuid())
  original_plan_id      String
  warehouse_id          String?
  plan_date             DateTime?
  status                PlanStatus
  total_trips           Int
  total_units           Int
  version               Int
  archived_at           DateTime    @default(now())
  retention_date        DateTime    // When to delete (archived_at + 2 years)
  original_data         String      // JSON backup of full plan
  createdAt             DateTime
  is_deleted            Boolean

  @@index([original_plan_id])
  @@index([archived_at])
  @@index([retention_date])
  @@map("transport_plan_archives")
}